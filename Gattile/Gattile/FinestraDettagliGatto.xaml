<Window x:Class="Gattile.FinestraDettagliGatto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dettagli Gatto" Height="235" Width="342" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nome:" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Text="{Binding Nome}" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="Razza:" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Text="{Binding Razza}" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Sesso:" Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Text="{Binding Sesso}" Grid.Row="2" Grid.Column="1"/>

        <TextBlock Text="Data di nascita:" Grid.Row="3" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Text="{Binding DataNascita, StringFormat={}{0:dd/MM/yyyy}}" Grid.Row="3" Grid.Column="1"/>

        <TextBlock Text="Descrizione:" Grid.Row="4" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Text="{Binding Descrizione}" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap"/>
        <TextBlock Text="Codice Identificativo:" Grid.Row="5" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Text="{Binding CodiceIdentificativo}" Grid.Row="5" Grid.Column="1"/>

        <Button Content="Chiudi" Grid.Row="6" Width="150" HorizontalAlignment="Center" Click="BtnChiudi_Click" Grid.Column="1"/>
    </Grid>
</Window>
