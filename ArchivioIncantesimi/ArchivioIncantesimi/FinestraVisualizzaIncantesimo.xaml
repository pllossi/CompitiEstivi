<Window x:Class="ArchivioIncantesimi.FinestraVisualizzaIncantesimo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualizza Incantesimo" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Inserisci CRA"/>
            <TextBox x:Name="txtCRA"  Margin="0,5"/>
            <Button Content="Cerca" Click="BtnCerca_Click" Margin="0,10"/>
            <TextBlock x:Name="txtDettagli" TextWrapping="Wrap" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
