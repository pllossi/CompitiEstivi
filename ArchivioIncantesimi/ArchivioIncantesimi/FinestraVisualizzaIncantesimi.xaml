<Window x:Class="ArchivioIncantesimi.FinestraVisualizzaIncantesimi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Incantesimi" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid x:Name="dgIncantesimi" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CRA" Binding="{Binding CRA}" Width="100"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="150"/>
                <DataGridTextColumn Header="Creatore" Binding="{Binding Creatore}" Width="150"/>
                <DataGridTextColumn Header="Data" Binding="{Binding DataScoperta, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Scuole" Binding="{Binding ScuoleMagiaString}" Width="150"/>
                <DataGridCheckBoxColumn Header="Disponibile" Binding="{Binding Disponibile}" Width="80"/>
                <DataGridTextColumn Header="Livello" Binding="{Binding LivelloPericolo}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
